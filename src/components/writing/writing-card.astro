---
import CategoryList from "@/components/ui/category-list.astro";

const { writing } = Astro.props;
---

<div
  class="group cursor-pointer aspect-square rounded-2xl border overflow-hidden p-6 transition hover:bg-accent hover:text-accent-foreground focus:outline-none focus-visible:ring-2 focus-visible:ring-ring"
>
  <a href={`/writing/${writing.slug}`} class="h-full w-full">
    <div class="flex h-full flex-col justify-between p-4 gap-4">
      <div class="text-sm text-muted-foreground font-['doto']">
        {
          writing.data.date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </div>
      <h2
        class="text-3xl font-medium tracking-tight line-clamp-2 group-hover:text-accent-foreground"
      >
        {writing.data.title}
      </h2>
      <CategoryList
        categories={writing.data.categories}
        class="text-sm text-muted-foreground font-['doto'] mt-2"
        asLinks={true}
        basePath="/writing"
      />
    </div>
  </a>
</div>
