---
import type { CollectionEntry } from "astro:content";
import WritingCard from "./writing-card.astro";
import ContentGrid from "@/components/ui/content-grid.astro";

interface Props {
  writings: CollectionEntry<"writing">[];
}

const { writings } = Astro.props;

const sortedWritings = writings?.length
  ? [...writings].sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  : [];
---

<ContentGrid hasItems={writings.length > 0} emptyMessage="No writings found">
  {sortedWritings.map((writing) => <WritingCard writing={writing} />)}
</ContentGrid>
