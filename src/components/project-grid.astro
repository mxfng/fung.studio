---
import type { CollectionEntry } from "astro:content";
import ProjectCard from "./project-card.astro";

interface Props {
  projects: CollectionEntry<"projects">[];
}

const { projects } = Astro.props;

const sortedProjects = projects?.length
  ? [...projects].sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  : [];
---

{
  !projects?.length ? (
    <div>No works found</div>
  ) : (
    <div class="grid md:grid-cols-2 3xl:grid-cols-3 gap-12">
      {sortedProjects.map((project) => (
        <ProjectCard project={project} client:visible />
      ))}
    </div>
  )
}
