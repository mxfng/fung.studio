---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { cn } from "@/lib/utils";

interface Props {
	imageProps: ImageMetadata;
	alt?: string;
	class?: string;
}

const { imageProps, alt, class: className } = Astro.props as Props;
---

<div
	class={cn(
		"bg-secondary group-hover:bg-foreground/20 flex aspect-[7/8] items-start justify-center rounded p-[6%] transition-colors duration-300",
		className,
	)}
>
	<div class="bg-background relative aspect-square w-full overflow-hidden">
		<Image
			src={imageProps}
			alt={alt ?? "Hero image"}
			loading="lazy"
			class="absolute inset-0 h-full w-full object-cover"
		/>
	</div>
</div>
