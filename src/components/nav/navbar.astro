---
import PaddingX from "@/components/util/padding-x.astro";
import Logo from "@/components/ui/logo.astro";
import NavMenu from "./nav-menu.astro";
---

<nav class="bg-background top-0 right-0 left-0 z-50 mt-4 md:fixed md:mt-0">
	<PaddingX>
		<div
			class="flex w-full flex-col items-start gap-4 py-2 md:flex-row md:items-center md:justify-between md:gap-8 md:py-4"
		>
			<a href="/" class="w-[20vw]">
				<Logo class="fill-primary stroke-primary h-auto w-16 md:w-20" />
			</a>
			<div class="flex max-w-screen-2xl flex-1 justify-end">
				<NavMenu currentPath={Astro.url.pathname} />
			</div>
		</div>
	</PaddingX>
</nav>
