---
import PaddingX from "@/components/util/padding-x.astro";
import Nav from "./nav.astro";
import ModeToggle from "@/components/ui/mode-toggle.astro";
---

<nav class="bg-background fixed inset-x-0 top-0 z-50">
	<PaddingX>
		<div
			class="flex h-14 w-full items-center gap-4 border-b py-2 md:h-20 md:justify-between md:gap-8 lg:gap-24"
		>
			<a href="/">
				<h1 class="text-xl font-medium tracking-tight md:text-2xl">Max Fung</h1>
			</a>
			<div class="flex flex-1 items-center justify-end gap-2 md:justify-center">
				<Nav />
			</div>
			<div class="hidden md:block">
				<ModeToggle />
			</div>
		</div>
	</PaddingX>
</nav>
