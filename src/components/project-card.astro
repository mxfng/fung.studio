---
import type { CollectionEntry } from "astro:content";
import { loadFirstProjectImage } from "@/lib/load-project-images";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const firstImage = loadFirstProjectImage(project.slug);
---

<a href={`/works/${project.slug}`} class="group block rounded-xl">
  <div class="flex flex-col gap-4">
    {
      firstImage && (
        <div class="relative aspect-[4/3] w-full overflow-hidden rounded-xl bg-secondary">
          <div class="absolute inset-0 transition-transform duration-300 group-hover:-translate-y-1.5">
            <img
              src={firstImage.src}
              alt={project.data.title}
              class="h-full w-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      )
    }

    <div class="flex flex-col gap-1.5">
      <h2 class="text-xl tracking-tight">
        {project.data.title}
      </h2>

      <div
        class="flex flex-wrap gap-x-1 text-sm text-muted-foreground font-medium"
      >
        {
          project.data.categories.map((category, index) => (
            <span class="font-['doto']">
              <a
                href={`/works/${category.toLowerCase()}`}
                class="hover:text-foreground underline underline-offset-2 font-['doto']"
              >
                {category}
              </a>
              {index < project.data.categories.length - 1 && (
                <span class="text-muted-foreground">,</span>
              )}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</a>
