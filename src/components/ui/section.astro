---
import { cn } from "@/lib/utils";

interface Props {
	label: string;
	align?: "left" | "center";
}

const { label, align = "left" } = Astro.props;
---

<div class={cn("flex flex-col gap-0.5", align === "center" && "items-center")}>
	<p class="font-accent text-muted-foreground text-xs">{label}</p>
	<div class="max-w-[55ch]">
		<slot />
	</div>
</div>
