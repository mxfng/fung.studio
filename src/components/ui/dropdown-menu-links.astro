---
import ArrowUpRight from "lucide-static/icons/arrow-up-right.svg";

interface ContactLink {
  label: string;
  href: string;
  description: string;
}

interface Props {
  links: readonly ContactLink[];
}

const { links } = Astro.props;
---

<>
  {
    links.map((link) => (
      <li>
        <a
          href={link.href}
          target={link.href.startsWith("http") ? "_blank" : undefined}
          rel={link.href.startsWith("http") ? "noopener noreferrer" : undefined}
          class="block rounded-md px-3 py-2 hover:bg-accent hover:text-accent-foreground transition-colors duration-200"
        >
          <div class="flex items-center gap-1 font-medium">
            {link.label}
            {link.href.startsWith("http") && <ArrowUpRight class="w-4 h-4" />}
          </div>
          <p class="text-sm text-muted-foreground">{link.description}</p>
        </a>
      </li>
    ))
  }
</>
