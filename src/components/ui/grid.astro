---
interface Props {
	hasItems: boolean;
	emptyMessage?: string;
}

const { hasItems, emptyMessage = "" } = Astro.props;
---

{
	!hasItems ? (
		<div class="text-muted-foreground text-center">{emptyMessage}</div>
	) : (
		<div class="grid gap-6 space-y-4 sm:grid-cols-2 md:space-y-6 lg:grid-cols-3">
			<slot />
		</div>
	)
}
