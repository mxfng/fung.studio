---
import { cn } from "@/lib/utils";

interface Props {
	hasItems: boolean;
	emptyMessage?: string;
	maxColumns?: number; // Up to 3 columns
}

const { hasItems, emptyMessage = "", maxColumns = 3 } = Astro.props;
---

{
	!hasItems ? (
		<div class="text-muted-foreground text-center">{emptyMessage}</div>
	) : (
		<div
			class={cn(
				"grid gap-6 space-y-4",
				maxColumns >= 2 && "sm:grid-cols-2",
				maxColumns >= 3 && "lg:grid-cols-3",
			)}
		>
			<slot />
		</div>
	)
}
