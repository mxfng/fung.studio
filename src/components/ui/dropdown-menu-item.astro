---
import { cn } from "@/lib/utils";

interface Props {
	href: string;
	class?: string;
}

const { href, class: className } = Astro.props;
---

<li>
	<a
		href={href}
		target={href.startsWith("http") ? "_blank" : undefined}
		rel={href.startsWith("http") ? "noopener noreferrer" : undefined}
		class={cn(
			"hover:bg-accent/50 hover:text-accent-foreground block rounded-md px-3 py-2 transition-colors duration-200",
			className,
		)}
	>
		<slot />
	</a>
</li>
