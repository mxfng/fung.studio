---
import "@/styles/global.css";
import Navbar from "@/components/nav/navbar.astro";
import PaddingX from "@/components/util/padding-x.astro";
import Footer from "@/components/footer.astro";

interface Props {
	title?: string;
	description?: string;
}

const {
	title,
	description = "Musician, Software Developer, and Designer living in Los Angeles, California. An archive of work, ideas, and experiments.",
} = Astro.props;

const pageTitle = title ? `${title} - Max Fung` : "Works by Max Fung";
---

<!doctype html>
<html lang="en">
	<script is:inline src="/theme.js"></script>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content={description} />
	<meta property="og:type" content="website" />
	<meta property="og:title" content={title} />
	<meta property="og:description" content={description} />
	<meta property="og:image" content="/share.png" />
	<meta property="og:url" content={Astro.url} />
	<meta property="og:site_name" content="Max Fung" />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content={title} />
	<meta name="twitter:description" content={description} />
	<meta name="twitter:image" content="/share.png" />
	<meta name="author" content="Max Fung" />
	<meta name="robots" content="index, follow" />
	<link rel="canonical" href={Astro.url} />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link
		rel="preload"
		href="/fonts/switzer/Switzer-Variable.woff2"
		as="font"
		type="font/woff2"
		crossorigin="anonymous"
	/>
	<meta name="generator" content={Astro.generator} />
	<title>{pageTitle}</title>

	<body class="flex min-h-dvh flex-col font-sans">
		<Navbar />
		<main class="mt-16 flex flex-1 flex-col md:mt-30">
			<PaddingX class="flex flex-1 flex-col">
				<slot />
			</PaddingX>
		</main>
		<Footer />
	</body>
</html>
