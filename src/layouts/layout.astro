---
import "@/styles/global.css";
import Navbar from "@/components/nav/navbar.astro";
import PaddingX from "@/components/util/padding-x.astro";
import Footer from "@/components/footer.astro";
import { cn } from "@/lib/utils";

interface Props {
	title?: string;
	description?: string;
	size?: "default" | "wide";
}

const { title, description = "A collection of works", size = "default" } = Astro.props;

const pageTitle = title ? `${title} - Max Fung` : "Max Fung";
---

<!doctype html>
<html lang="en" class="overflow-x-hidden">
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content={description} />
	<meta property="og:type" content="website" />
	<meta property="og:title" content={title} />
	<meta property="og:description" content={description} />
	<meta property="og:image" content="/share.png" />
	<meta property="og:url" content={Astro.url} />
	<meta property="og:site_name" content="Max Fung" />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content={title} />
	<meta name="twitter:description" content={description} />
	<meta name="twitter:image" content="/share.png" />
	<meta name="author" content="Max Fung" />
	<meta name="robots" content="index, follow" />
	<link rel="canonical" href={Astro.url} />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link
		rel="preload"
		href="/fonts/switzer/Switzer-Variable.woff2"
		as="font"
		type="font/woff2"
		crossorigin
	/>
	<meta name="generator" content={Astro.generator} />
	<title>{pageTitle}</title>

	<body class="overflow-x-hidden">
		<div class="flex min-h-dvh flex-col">
			<Navbar />
			<main class="mt-14 flex flex-1 flex-col md:mt-20">
				<PaddingX
					class={cn("flex flex-1 flex-col pt-12 pb-42", size === "default" && "max-w-screen-2xl")}
				>
					<slot />
				</PaddingX>
			</main>
			<Footer />
		</div>
	</body>
</html>
