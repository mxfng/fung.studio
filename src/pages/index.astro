---
import WorksGrid from "@/components/works/works-grid.astro";
import { getWorks } from "@/lib/get-collection";
import { formatCollection } from "@/lib/format-collection";
import Layout from "@/layouts/layout.astro";

const works = await getWorks();
const filteredWorks = formatCollection<"works">(works, {
  sortBy: "date",
  sortOrder: "desc",
});
---

<Layout>
  <WorksGrid works={filteredWorks} />
</Layout>
