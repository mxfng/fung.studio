---
import Layout from "@/layouts/layout.astro";
import WorksGrid from "@/components/works/works-grid.astro";
import PrevNext from "@/components/prev-next.astro";
import { WorksCategory } from "@/config/categories";
import { capitalize, filterByCategory, getWorks } from "@/lib/utils";

export function getStaticPaths() {
  return Object.values(WorksCategory).map((category) => ({
    params: { category },
  }));
}

const { category } = Astro.params;
const works = await getWorks();
const filteredWorks = filterByCategory<"works">(
  works,
  category as WorksCategory
);
---

<Layout title={category ? `${category} - Works` : "Works"}>
  {
    category && (
      <div class="mb-8 flex flex-col gap-6">
        <PrevNext prev={{ label: "All works", href: "/" }} />
        <h1 class="text-4xl font-bold">{capitalize(category)}</h1>
      </div>
    )
  }
  <WorksGrid works={filteredWorks} />
</Layout>
