---
import Layout from "@/layouts/layout.astro";
import WritingGrid from "@/components/writing/writing-grid.astro";
import PrevNext from "@/components/prev-next.astro";
import { WritingCategory } from "@/config/categories";
import { capitalize, filterByCategory, getWritings } from "@/lib/utils";

export function getStaticPaths() {
  return Object.values(WritingCategory).map((category) => ({
    params: { category },
  }));
}

const { category } = Astro.params;
const writings = await getWritings();
const filteredWritings = filterByCategory<"writing">(
  writings,
  category as WritingCategory
);
---

<Layout title={category ? `${category} - Writing` : "Writing"}>
  {
    category && (
      <div class="mb-8 flex flex-col gap-6">
        <PrevNext prev={{ label: "All writing", href: "/writing" }} />
        <h1 class="text-4xl font-bold">{capitalize(category)}</h1>
      </div>
    )
  }
  <WritingGrid writings={filteredWritings} />
</Layout>
