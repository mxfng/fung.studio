{
	"name": "mf",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"tsc": "tsc",
		"tsc:check": "tsc --noEmit",
		"optimize:images": "bun scripts/optimize-images.mjs",
		"optimize:videos": "bun scripts/optimize-videos.mjs",
		"format": "bunx prettier . --write",
		"lint": "bun x eslint .",
		"lint:fix": "bun x eslint . --fix",
		"prepare": "husky install",
		"deploy:worker": "astro build && bunx wrangler deploy",
		"pre-commit": "bun run tsc:check && bun run lint && bun run format"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,astro}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,css}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@astrojs/react": "^4.3.0",
		"@astrojs/sitemap": "^3.4.0",
		"@tailwindcss/vite": "^4.1.8",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"astro": "5.8.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"flubber": "^0.4.2",
		"lint-staged": "^16.1.0",
		"lucide-static": "^0.511.0",
		"motion": "^12.15.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@types/flubber": "^0.4.0",
		"@typescript-eslint/parser": "8.33.0",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.4.1",
		"globals": "^16.2.0",
		"husky": "^8.0.3",
		"prettier": "^3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"sharp": "^0.34.2",
		"tw-animate-css": "^1.3.2",
		"typescript": "5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite-plugin-cjs-interop": "^2.2.0",
		"wrangler": "^4.18.0"
	}
}
